{
  "manifest_version": 2,

  "name": "Radio JU extension",
  "description": "Plays live audio stream of Radio JU",
  "version": "1.0",
  "permissions": [ "activeTab", "declarativeContent","storage"],
  "browser_action": {
    "default_icon": "icon_ju.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "page": "background.html"
  }
}